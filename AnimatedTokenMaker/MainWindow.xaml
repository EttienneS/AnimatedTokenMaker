<Window x:Class="AnimatedTokenMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimatedTokenMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="425" Width="860"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel Margin="20,20,20,20">
            <StackPanel Orientation="Horizontal" >
                <Label Content="Border: " />
                <ComboBox Loaded="BorderSelector_Loaded" SelectionChanged="BorderSelector_SelectionChanged" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="400" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Label Content="Image: " />
                <Label Name="ImageNameLabel" Content="No image selected!" />
                <Button Content="Load" Width="75" Click="LoadImage_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Border BorderThickness="1" BorderBrush="LightGray" Margin="5" Background="Gray">
                    <Image Name="PreviewImage1" Height="150" Width="150" Source="{Binding Preview1}"/>
                </Border>
                <Border BorderThickness="1" BorderBrush="LightGray" Margin="5" Background="Gray">
                    <Image Name="PreviewImage2" Height="150" Width="150" Source="{Binding Preview2}"/>
                </Border>
                <Border BorderThickness="1" BorderBrush="LightGray" Margin="5" Background="Gray">
                    <Image Name="PreviewImage3" Height="150" Width="150" Source="{Binding Preview3}"/>
                </Border>
                <Border BorderThickness="1" BorderBrush="LightGray" Margin="5" Background="Gray">
                    <Image Name="PreviewImage4" Height="150" Width="150" Source="{Binding Preview4}"/>
                </Border>
                <Border BorderThickness="1" BorderBrush="LightGray" Margin="5" Background="Gray">
                    <Image Name="PreviewImage5" Height="150" Width="150" Source="{Binding Preview5}"/>
                </Border>
            </StackPanel>
            <StackPanel Name="ControlPanel">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="Scale:" Width="60"/>
                    <Slider Name="ScaleSlider" Width="500" Minimum="-1" Maximum="3" Value="{Binding Scale}"  Thumb.DragStarted="DragStarted" Thumb.DragCompleted="DragCompleted"/>
                    <TextBox Text="{Binding Scale}" Width="100" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" >
                    <Label Content="Left:" Width="60"/>
                    <Slider Name="LeftSlider" Width="500" Minimum="-100" Maximum="100" Value="{Binding OffsetX}"  Thumb.DragStarted="DragStarted" Thumb.DragCompleted="DragCompleted"/>
                    <TextBox Text="{Binding OffsetX}" Width="100" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" >
                    <Label Content="Top:" Width="60"/>
                    <Slider Name="TopSlider" Width="500" Value="{Binding OffsetY}" Minimum="-100" Maximum="100" Thumb.DragStarted="DragStarted" Thumb.DragCompleted="DragCompleted"/>
                    <TextBox Text="{Binding OffsetY}" Width="100" />
                </StackPanel>

                <Button Content="Generate" Click="Save_Click" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>